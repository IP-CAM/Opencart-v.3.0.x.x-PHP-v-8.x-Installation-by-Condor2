<form action="{{ action }} method="post" enctype="multipart/form-data" id="form-affiliate" class="form-horizontal">
	<div class="table-responsive">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td class="text-left"><a href="{{ sort_name }}"{% if sort == 'name' %} class="{{ order|lower }}"{% endif %}>{{ column_name }}</a></td>
					<td class="text-left"><a href="{{ sort_tracking }}"{% if sort == 'ca.tracking' %} class="{{ order|lower }}"{% endif %}>{{ column_tracking }}</a></td>
					<td class="text-right"><a href="{{ sort_commission }}"{% if sort == 'ca.commission' %} class="{{ order|lower }}"{% endif %}>{{ column_commission }}</a></td>
					<td class="text-right">{{ column_balance }}</td>
					<td class="text-left"><a href="{{ sort_status }}"{% if sort == 'ca.status' %} class="{{ order|lower }}"{% endif %}>{{ column_status }}</a></td>
					<td class="text-left"><a href="{{ sort_date_added }}"{% if sort == 'ca.date_added' %} class="{{ order|lower }}"{% endif %}>{{ column_date_added }}</a></td>
				</tr>
			</thead>
			<tbody>
				{% if affiliates %}
					{% for affiliate in affiliates %}
						<tr>
							<td class="text-left"><a href="{{ affiliate.customer }}">{{ affiliate.name }}</a></td>
							<td class="text-left">{{ affiliate.tracking }}</td>
							<td class="text-right">{{ affiliate.commission }}</td>
							<td class="text-right">{{ affiliate.balance }}</td>
							<td class="text-left">{{ affiliate.status }}</td>
							<td class="text-left">{{ affiliate.date_added }}</td>
						</tr>
					{% endfor %}
				{% else %}
					<tr>
						<td class="text-center" colspan="8">{{ text_no_results }}</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
	<div class="row">
		<div class="col-sm-6 text-left">{{ pagination }}</div>
		<div class="col-sm-6 text-right">{{ results }}</div>
	</div>
</form>